{
    "env": {
        "commonjs": true,
        "es6": true,
        "browser": true,
        "node": true
    },
    "extends": [
        "airbnb-base"
    ],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 11
    },
    "ignorePatterns": ["frontend/**"],
    "rules": {
        "no-use-before-define": "off",
        "no-console": "error",
        "space-before-function-paren": "error"
    }
}
